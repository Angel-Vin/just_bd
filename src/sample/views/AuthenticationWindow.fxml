<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" spacing="4.0" style="-fx-background-color: grey;" stylesheets="@JMetroDarkTheme.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controllers.AuthenticationWindowController">
   <children>
      <TextField promptText="Логин" fx:id="tfLogin"/>
      <TextField promptText="Пароль" fx:id="tfPass"/>
      <Button mnemonicParsing="false" text="Войти" onAction="#login"/>
      <Button mnemonicParsing="false" text="Назад" onAction="#back"/>
   </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
