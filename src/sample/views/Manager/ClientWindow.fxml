<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" prefHeight="380.0" prefWidth="409.0" spacing="4.0" style="-fx-background-color: grey;" stylesheets="fxml/JMetroDarkTheme.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <TextField fx:id="tfLastName" promptText="Фамилия" />
        <TextField fx:id="tfFirstName" promptText="Имя" />
        <TextField fx:id="tfPatronymic" promptText="Отчество" />
        <Label prefHeight="21.0" prefWidth="389.0" text="Дата рождения:" />
        <HBox alignment="TOP_CENTER" prefHeight="34.0" prefWidth="389.0" spacing="5.0">
            <children>
                <ComboBox fx:id="cbBirthDay" prefWidth="150.0" />
                <ComboBox fx:id="cbBirthMonth" prefWidth="150.0" />
                <ComboBox fx:id="cbBirthYear" prefWidth="150.0" />
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </HBox>
        <Label prefHeight="21.0" prefWidth="415.0" text="Паспортные данные:" />
        <TextField fx:id="tfPassSeries" promptText="Серия паспорта.." />
        <TextField fx:id="tfPassNum" promptText="Номер паспорта.." />
        <Label prefHeight="21.0" prefWidth="389.0" text="Дата покупки/продажи:" />
        <HBox alignment="TOP_CENTER" prefHeight="34.0" prefWidth="389.0" spacing="5.0">
            <children>
                <ComboBox fx:id="cbBuySellDay" prefWidth="150.0" />
                <ComboBox fx:id="cbBuySellMonth" prefWidth="150.0" />
                <ComboBox fx:id="cbBuySellYear" prefWidth="150.0" />
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
            <children>
                <Button mnemonicParsing="false" onAction="#confirm" text="ОК" />
                <Button mnemonicParsing="false" onAction="#back" text="Назад" />
            </children>
        </HBox>
    </children>
</VBox>
