<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox style="-fx-background-color: grey;" stylesheets="fxml/JMetroDarkTheme.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controllers.Manager.SparePartController">
   <children>
      <ListView prefHeight="200.0" prefWidth="200.0" fx:id="lvSpareParts"/>
      <VBox alignment="center" prefHeight="275.0" prefWidth="304.0" spacing="4.0" >
          <padding>
              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </padding>
         <children>
            <TextField promptText="Наименование" fx:id="tfName"/>
            <TextField promptText="Марка автомобиля" fx:id="tfMark"/>
            <TextField promptText="Модель автомобиля" fx:id="tfModel"/>
            <TextField promptText="Цена" fx:id="tfPrice"/>
            <TextField promptText="Количество на складе" fx:id="tfAmount"/>
            <HBox alignment="CENTER" prefHeight="38.0" prefWidth="287.0" spacing="55.0">
               <children>
                  <Button mnemonicParsing="false" text="ОК" onAction="#cofirm"/>
                  <Button mnemonicParsing="false" text="Отмена" onAction="#cancel"/>
               </children>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
