<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="4.0" style="-fx-background-color: grey;" stylesheets="fxml/JMetroDarkTheme.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
      <HBox alignment="CENTER_LEFT" prefHeight="149.0" prefWidth="323.0" spacing="5.0">
         <children>
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <TextField fx:id="tfMark" alignment="TOP_LEFT" promptText="Марка" />
                  <TextField fx:id="tfColor" promptText="Цвет" />
                  <TextField fx:id="tfCarcassNum" promptText="Номер кузова" />
                  <TextField fx:id="tfChassisNum" promptText="Номер шасси" />
               </children>
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </VBox>
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <TextField fx:id="tfModel" promptText="Модель" />
                  <TextField fx:id="tfMileage" promptText="Пробег" />
                  <TextField fx:id="tfEngineNum" promptText="Номер двигателя" />
                  <TextField fx:id="tfReleaseDate" promptText="Дата выпуска" />
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
        <TextField fx:id="tfSellingPrice" promptText="Цена продажи" />
        <TextField fx:id="tfReleasePrice" promptText="Цена на момент выпуска" />
        <TextField fx:id="tfStateRegNum" promptText="Номер гос регистрации" />
        <HBox alignment="CENTER" prefHeight="38.0" prefWidth="287.0" spacing="55.0">
            <children>
                <Button mnemonicParsing="false" onAction="#confirm" text="ОК" />
                <Button mnemonicParsing="false" onAction="#cancel" text="Отмена" />
            </children>
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>
