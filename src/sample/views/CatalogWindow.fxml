<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="center" prefHeight="275.0" prefWidth="307.0" spacing="4.0" style="-fx-background-color: grey;" stylesheets="@JMetroDarkTheme.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" >
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <VBox alignment="CENTER" prefHeight="255.0" prefWidth="164.0" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" text="Добавить" onAction="#add"/>
                <Button mnemonicParsing="false" text="Редактировать" textAlignment="CENTER" onAction="#edit"/>
                <Button mnemonicParsing="false" text="Удалить" onAction="#remove"/>
                <Button mnemonicParsing="false" text="Назад" onAction="#back"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
        <ListView prefHeight="255.0" prefWidth="160.0" fx:id="lwItems"/>
    </children>
</HBox>
